<odoo>
    <record id="view_le_group_student_list" model="ir.ui.view">
        <field name="name">le.group.student.list</field>
        <field name="model">le.group.student</field>
        <field name="arch" type="xml">
            <list string="Group Students">
                <field name="group_id"/>
                <field name="student_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_le_group_student_form" model="ir.ui.view">
        <field name="name">le.group.student.form</field>
        <field name="model">le.group.student</field>
        <field name="arch" type="xml">
            <form string="Group Student">
            
            <div class="oe_button_box" name="button_box">
                <button name="action_attendance"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-money-check-dollar"
                    invisible="attandance_count == 0">
                    <field name="attandance_count" widget="statinfo" string="Attandances"/>
                </button>
            </div>

                <sheet>
                    <group>
                        <field name="group_id"/>
                        <field name="student_id"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_le_group_student" model="ir.actions.act_window">
        <field name="name">Group Students</field>
        <field name="res_model">le.group.student</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_le_group_student"
              name="Group Students"
              parent="menu_le_root"
              action="action_le_group_student"/>
</odoo>
