<odoo>
    <record id="view_le_subject_list" model="ir.ui.view">
        <field name="name">le.subject.list</field>
        <field name="model">le.subject</field>
        <field name="arch" type="xml">
            <list string="Subjects">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_le_subject_form" model="ir.ui.view">
        <field name="name">le.subject.form</field>
        <field name="model">le.subject</field>
        <field name="arch" type="xml">
            <form string="Subject">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_le_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">le.subject</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_le_subject"
              name="Subjects"
              parent="menu_le_root"
              action="action_le_subject"/>
</odoo>
