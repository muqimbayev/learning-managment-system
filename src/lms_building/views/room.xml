<odoo>
    <record id="view_lb_room_list" model="ir.ui.view">
        <field name="name">lb.room.list</field>
        <field name="model">lb.room</field>
        <field name="arch" type="xml">
            <list string="Rooms">
                <field name="name"/>
                <field name="building_id"/>
                <field name="floor_id"/>
            </list>
        </field>
    </record>

    <record id="view_lb_room_form" model="ir.ui.view">
        <field name="name">lb.room.form</field>
        <field name="model">lb.room</field>
        <field name="arch" type="xml">
            <form string="Room">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="building_id"/>
                        <field name="floor_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    
    <record id="action_lb_room" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">lb.room</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_lb_room"
              name="Rooms"
              parent="menu_lb_root"
              action="action_lb_room"/>
</odoo>
