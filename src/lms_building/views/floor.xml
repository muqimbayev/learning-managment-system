<odoo>
    <record id="view_lb_floor_list" model="ir.ui.view">
        <field name="name">lb.floor.list</field>
        <field name="model">lb.floor</field>
        <field name="arch" type="xml">
            <list string="Floors">
                <field name="name"/>
                <field name="building_id"/>
            </list>
        </field>
    </record>

    <record id="view_lb_floor_form" model="ir.ui.view">
        <field name="name">lb.floor.form</field>
        <field name="model">lb.floor</field>
        <field name="arch" type="xml">
            <form string="Floor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="building_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_lb_floor" model="ir.actions.act_window">
        <field name="name">Floors</field>
        <field name="res_model">lb.floor</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_lb_floor"
              name="Floors"
              parent="menu_lb_root"
              action="action_lb_floor"/>
</odoo>
