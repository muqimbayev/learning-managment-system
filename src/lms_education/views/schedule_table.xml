<odoo>
    <record id="view_le_schedule_table_list" model="ir.ui.view">
        <field name="name">le.schedule.table.list</field>
        <field name="model">le.schedule.table</field>
        <field name="arch" type="xml">
            <list string="Schedule Tables">
                <field name="name"/>
                <field name="group_id"/>
                <field name="teacher_id"/>
                <field name="start_date"/>
            </list>
        </field>
    </record>

    <record id="view_le_schedule_table_form" model="ir.ui.view">
        <field name="name">le.schedule.table.form</field>
        <field name="model">le.schedule.table</field>
        <field name="arch" type="xml">
            <form string="Schedule Table" edit="false">
                <sheet>
                
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="group_id"/>
                            <field name="teacher_id"/>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="lesson_start_time" widget="float_time"/>
                            <field name="lesson_end_time" widget="float_time"/>
                            <field name="weekday_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Schedule Lessons">
                            <field name="schedule_lesson_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="lesson_date"/>
                                    <field name="lesson_start_time" widget="float_time"/>
                                    <field name="lesson_end_time" widget="float_time"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_le_schedule_table" model="ir.actions.act_window">
        <field name="name">Schedule Tables</field>
        <field name="res_model">le.schedule.table</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_le_schedule_table"
              name="Schedule Tables"
              parent="menu_le_root"
              action="action_le_schedule_table"/>
</odoo>
