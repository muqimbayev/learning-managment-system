<odoo>
    <record id="view_lp_payment_list" model="ir.ui.view">
        <field name="name">lp.payment.list</field>
        <field name="model">lp.payment</field>
        <field name="arch" type="xml">
            <list string="Payments">
                <field name="user_id"/>
                <field name="amount"/>
                <field name="payment_type"/>
                <field name="payment_date"/>
            </list>
        </field>
    </record>

    <record id="view_lp_payment_form" model="ir.ui.view">
        <field name="name">lp.payment.form</field>
        <field name="model">lp.payment</field>
        <field name="arch" type="xml">
            <form string="Payment">
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="amount"/>
                    </group>
                    <group>
                        <field name="payment_type"/>
                        <field name="payment_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_lp_payment" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">lp.payment</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_lp_payment_root" name="Payments"/>
    <menuitem id="menu_lp_payment"
              name="All Payments"
              parent="menu_lp_payment_root"
              action="action_lp_payment"/>
</odoo>
