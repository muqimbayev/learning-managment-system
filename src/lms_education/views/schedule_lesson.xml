<odoo>
    <record id="view_le_schedule_lesson_list" model="ir.ui.view">
        <field name="name">le.schedule.lesson.list</field>
        <field name="model">le.schedule.lesson</field>
        <field name="arch" type="xml">
            <list string="Schedule Lessons">
                <field name="name"/>
                <field name="schedule_table_id"/>
                <field name="lesson_date"/>
                <field name="group_id"/>
                <field name="lesson_start_time" widget="float_time"/>
                <field name="lesson_end_time" widget="float_time"/>
            </list>
        </field>
    </record>

    <record id="view_le_schedule_lesson_form" model="ir.ui.view">
        <field name="name">le.schedule.lesson.form</field>
        <field name="model">le.schedule.lesson</field>
        <field name="arch" type="xml">
            <form string="Schedule Lesson" edit="False">
            <header>
                <field name="status" widget="statusbar" statusbar_visible="draft,passed,canceled,transfer"/>

            <button name="button_passed" string="Darsni boshlash" type="object" class="btn-primary" invisible = "status in ['passed', 'canceled', 'transfer']"/>
            <button name="leaving_lesson" string="Darsni qoldirish" type="object" class="btn-primary" invisible = "status in ['passed', 'canceled', 'transfer']"/>

            <button name="transfer_lesson" string="Darsni ko'chirish" type="object" class="btn-primary" invisible = "status in ['passed', 'canceled', 'transfer']" confirm="Dars kunlarii ko'chirhshni tasdiqlaysizmi?"/>
            <button name="delete_lesson" string="Darsni o'chirish" type="object" class="btn-danger" invisible = "status in ['passed', 'canceled', 'transfer']" confirm="Darsni o'chirishni tasdiqlaysizmi?"/>

            </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="group_id"/>
                    </group>
                    <group>
                        <field name="lesson_start_time" widget="float_time"/>
                        <field name="lesson_end_time" widget="float_time"/>
                                                <field name="lesson_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_le_schedule_lesson" model="ir.actions.act_window">
        <field name="name">Schedule Lessons</field>
        <field name="res_model">le.schedule.lesson</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_le_schedule_lesson"
              name="Schedule Lessons"
              parent="menu_le_root"
              action="action_le_schedule_lesson"/>
</odoo>
