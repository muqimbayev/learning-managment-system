<odoo>
    <record id="view_le_homework_list" model="ir.ui.view">
        <field name="name">le.homework.list</field>
        <field name="model">le.homework</field>
        <field name="arch" type="xml">
            <list string="Homeworks">
                <field name="name"/>
                <field name="lesson_id"/>
            </list>
        </field>
    </record>

    <record id="view_le_homework_form" model="ir.ui.view">
        <field name="name">le.homework.form</field>
        <field name="model">le.homework</field>
        <field name="arch" type="xml">
            <form string="Homework">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="lesson_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_le_homework" model="ir.actions.act_window">
        <field name="name">Homeworks</field>
        <field name="res_model">le.homework</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_le_homework"
              name="Homeworks"
              parent="menu_le_root"
              action="action_le_homework"/>
</odoo>
